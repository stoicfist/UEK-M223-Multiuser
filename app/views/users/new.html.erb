<div class="auth-container">
  <% if @user.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(@user.errors.count, "Fehler") %> verhinderten die Registrierung:</h3>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h1 class="app-title">LaTeXHub</h1>
  <h2 class="auth-title">Registrieren</h2>

  <%= form_with model: @user, url: users_path, local: true, class: "auth-form" do |f| %>
    <div class="form-group">
      <%= f.label :email, "E-Mail" %>
      <%= f.email_field :email, required: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Passwort (â‰¥ 12 Zeichen)" %>
      <%= f.password_field :password, required: true, minlength: 12, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Passwort bestÃ¤tigen" %>
      <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
    </div>

    <%= f.submit "Konto anlegen", class: "btn-primary" %>
  <% end %>

  <p class="auth-footer">
    Bereits ein Konto?
    <%= link_to "Einloggen", login_path %>
  </p>
</div>