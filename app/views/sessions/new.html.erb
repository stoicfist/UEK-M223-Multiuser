<div class="auth-container">
  <h1 class="app-title">LaTeXHub</h1>
  <h2 class="auth-title">Login</h2>

  <%= form_with url: login_path, local: true, class: "auth-form" do |f| %>
    <div class="form-group">
      <%= f.label :email, "E-Mail" %>
      <%= f.email_field :email, required: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Passwort" %>
      <%= f.password_field :password, required: true, autocomplete: "current-password" %>
    </div>

    <%= f.submit "Einloggen", class: "btn-primary" %>
  <% end %>

  <p class="auth-footer">
    Noch keinen Account?
    <%= link_to "Registrieren", new_user_path %>
  </p>
</div>
