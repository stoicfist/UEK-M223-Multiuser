<div class="form-page">
  <div class="form-card">
    <div class="form-toolbar">
      <h1>Benutzer bearbeiten</h1>

      <div class="toolbar-actions">
        <%= link_to "Zurück", admin_users_path, class: "btn ghost" %>
      </div>
    </div>

    <% if @user.errors.any? %>
      <div class="form-errors">
        <strong><%= pluralize(@user.errors.count, "Fehler") %>:</strong>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: [:admin, @user], local: true, class: "nice-form" do |f| %>
      <div class="form-grid">
        <div class="form-group">
          <label>Benutzername</label>
          <%= f.text_field :username, class: "input" %>
        </div>

        <div class="form-group">
          <label>E-Mail</label>
          <%= f.email_field :email, class: "input" %>
        </div>

        <div class="form-group">
          <label>Passwort <span class="muted">(optional)</span></label>
          <%= f.password_field :password, class: "input", autocomplete: "new-password" %>
          <small class="help">Leer lassen, um Passwort unverändert zu lassen.</small>
        </div>

        <div class="form-group">
          <label>Passwort bestätigen</label>
          <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <label>Rolle</label>
          <%= f.select :role, [["admin","admin"],["moderator","moderator"],["user","user"]],
                       {}, class: "select" %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Speichern", class: "btn" %>
        <%= link_to "Abbrechen", admin_users_path, class: "btn ghost" %>
        <% if policy(@user).destroy? && !@user.admin? %>
          <%= link_to "Löschen", admin_user_path(@user),
                class: "btn danger",
                data: { turbo_method: :delete, turbo_confirm: "Benutzer wirklich löschen?" } %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

