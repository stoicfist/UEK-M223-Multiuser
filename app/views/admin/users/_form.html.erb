<%= form_with model: [:admin, user] do |f| %>
<div>
<%= f.label :username, "Benutzername" %><br>
<%= f.text_field :username %>
</div>

<div>
<%= f.label :email, "E-Mail" %><br>
<%= f.email_field :email %>
</div>

<div>
<%= f.label :password, "Passwort (optional)" %><br>
<%= f.password_field :password, autocomplete: "new-password" %>
</div>

<div>
<%= f.label :password_confirmation, "Passwort bestÃ¤tigen" %><br>
<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<%# Rolle nur anzeigen, wenn aktuelle*r Benutzer*in dazu berechtigt ist %>
<% if policy(user).update_role? %>
<div>
<%= f.label :role, "Rolle" %><br>
<%= f.select :role, options_for_select(User::ROLES, user.role || "user") %>
</div>
<% end %>

<div style="margin-top:10px;">
<%= f.submit "Speichern" %>
</div>
<% end %>
